/**app.wxss**/
.container {
  font-size:"24px";
  font-family: "微软雅黑";
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
}

#box {
  border: 1px dashed rgba(113, 56, 99, 0.8);
  margin: 16px;
}

#title {
  font-size: 20px;
  text-align: center;
  line-height: 36px;
  letter-spacing: 2px;
}

#tips {
  text-align: center;
  font-size: 16px;
  color: darkgray;
  border: 1px dotted darkgray;
  margin: 0 16px;
}