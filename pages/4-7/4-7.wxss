.imageBox {
  margin: 16px 32px;
}

.imageBox .subtitle {
  text-align: center;
  font-size: 16px;
  color: grey;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.imageBox .subtitle .line {
  height: 1px;
  background-color: grey;
  flex-grow: 1;
}

.imageBox .subtitle .content {
  margin: 0 4px;
}

.imageBox .image {
  width: 100%;
  height: 300px;
  border: 1px dotted grey;
}